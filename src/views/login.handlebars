
<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>


{{#if isAuthenticated}}
<div class="buttonProfileDiv">
    <button  id="profile" onclick="location.href='/products'">Ir al perfil</button>
</div>

{{else}}
<form class="login" action="/api/sessions/login" method="POST">
    <h3>Login</h3>
    <label for="email">Email</label>
    <input type="email" name="email" id="email" placeholder="email" required>

    <label for="password">Password</label>
    <input type="password" name="password" id="password" placeholder="password" required>

    <input class="submitButton" type="submit" value="Login">

    <div class="otherLinks">
        <button  onclick="location.href='/registro'">Registrarse</button>
        
        <button  onclick="location.href='/api/users/registroGithub'">Login con Github</button>
    </div>
</form>

{{/if}}










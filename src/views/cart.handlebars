{{> navbar}}
{{#if cart}}
<script>
    const cartId = "{{cart._id}}";
    let totalValue = 0
    {{#each cart.products}}
    totalValue+= {{quantity}} * {{productId.price}}
    {{/each}}
</script>
<table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripcion</th>         
          <th>Categoria</th>
          <th>Precio</th>
          <th>Cantidad</th>
       </tr>
      </thead>
      
      <tbody>
        {{#each cart.products}}
    <tr>
        <td>
            {{productId.title}}
        </td>
        <td>
            {{productId.description}}
        </td>
        <td>
            {{productId.category}}
        </td>
        <td>
            {{productId.price}}
        </td>
        <td>
            {{quantity}}

        </td>
        <td>
            <button class="deleteProductButton" id={{productId._id}}>Eliminar</button>
        </td>
    </tr>
      </tbody>


 

{{!-- <h4 id="totalValue">TOTAL:$</h4>
<button id="purchaseButton">Pagar</button> --}}

{{/each}}

<tr>   
    <td style="text-align: center" colspan="2">
        <h5>Total: $<span id="totalValue">{{totalValue}}</span></h5>
    </td>
          <td style="text-align: center" colspan="2">
            <button>PAGAR</button>
          </td>
        </tr>
        
</table>
      


{{else}}
